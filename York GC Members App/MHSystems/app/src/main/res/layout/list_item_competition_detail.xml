<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llRankGroupRow"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:weightSum="100">

        <com.mh.systems.york.ui.customfonts.RobotoTextView
            android:id="@+id/tvPosOfMember"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="15"
            android:gravity="center_vertical"
            android:text="1"
            android:textColor="@color/color1E1E1C"
            android:textSize="15sp" />

        <com.mh.systems.york.ui.customfonts.RobotoTextView
            android:id="@+id/tvNameOfMember"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="55"
            android:gravity="center_vertical"
            android:text="William Warren"
            android:textColor="@color/color1E1E1C"
            android:textSize="15sp" />

        <com.mh.systems.york.ui.customfonts.RobotoTextView
            android:id="@+id/tvScoreOfMember"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:gravity="right|center"
            android:text="70"
            android:textColor="@color/color1E1E1C"
            android:textSize="15sp" />

        <com.mh.systems.york.ui.customfonts.RobotoTextView
            android:id="@+id/tvTotalScoreOfMember"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:gravity="end|center"
            android:text="70"
            android:textColor="@color/color1E1E1C"
            android:textSize="15sp" />
    </LinearLayout>

    <!-- SPACE IN BOTTOM OF RESULT LIST -->

    <View
        android:id="@+id/vSpaceView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:visibility="gone" />
</LinearLayout>
