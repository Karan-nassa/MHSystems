<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mh.systems.halesworth">

    <!-- PERMISSION TO USE INTERNET -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- FOR NETWORK STATE -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- PERMISSION FOR PHONE CALL_PHONE -->
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppThemeMaterial">

        <!-- SPLASH ACTIVITY -->
        <activity
            android:name="com.mh.systems.halesworth.activites.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- LOGIN ACTIVITY -->
        <activity
            android:name="com.mh.systems.halesworth.activites.LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />

        <!-- DASHBOARD ACTIVITY -->
        <activity
            android:name="com.mh.systems.halesworth.activites.DashboardActivity"
            android:screenOrientation="portrait" />

        <!-- COURSE DIARY ACTIVITY -->
        <activity
            android:name="com.mh.systems.halesworth.activites.CourseDiaryActivity"
            android:screenOrientation="portrait" />

        <!-- COURSE DIARY DETAIL ACTIVITY -->
        <activity
            android:name="com.mh.systems.halesworth.activites.CourseDiaryDetailActivity"
            android:screenOrientation="portrait" />

        <!-- COURSE DIARY ALERT DIALOG -->
        <activity
            android:name="com.mh.systems.halesworth.activites.CustomAlertDialogActivity"
            android:screenOrientation="portrait"
            android:theme="@style/App_Theme" />

        <!-- COMPETITIONS DIARY ACTIVITY -->
        <activity
            android:name="com.mh.systems.halesworth.activites.CompetitionsActivity"
            android:screenOrientation="portrait" />

        <!-- COMPETITIONS DIARY ACTIVITY -->
        <activity
            android:name="com.mh.systems.halesworth.activites.CompetitionsDetailActivity"
            android:screenOrientation="portrait" />

        <!-- MY ACCOUNT ACTIVITY -->
        <activity
            android:name="com.mh.systems.halesworth.activites.YourAccountActivity"
            android:screenOrientation="portrait" />

        <!-- DETAIL INVOICE ACTIVITY -->
        <activity
            android:name="com.mh.systems.halesworth.activites.DetailInvoiceActivity"
            android:screenOrientation="portrait" />

        <!-- MEMBERS ACTIVITY -->
        <activity
            android:name="com.mh.systems.halesworth.activites.MembersActivity"
            android:screenOrientation="portrait" />

        <!-- MEMBERS DETAIL ACTIVITY -->
        <activity
            android:name="com.mh.systems.halesworth.activites.MemberDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeMaterial" />

        <!-- SHOW CERTIFICATE ACTIVITY -->
        <activity
            android:name="com.mh.systems.halesworth.activites.ShowCertificateWebview"
            android:screenOrientation="portrait" />

        <!-- CLUB NEWS ACTIVITY -->
        <activity
            android:name="com.mh.systems.halesworth.activites.ClubNewsActivity"
            android:screenOrientation="portrait" />

        <!-- CLUB NEWS DETAIL ACTIVITY -->
        <activity
            android:name="com.mh.systems.halesworth.activites.ClubNewsDetailActivity"
            android:screenOrientation="portrait" />

        <!-- SETTING SCREEN -->
        <activity
            android:name="com.mh.systems.halesworth.activites.SettingsActivity"
            android:screenOrientation="portrait" />

        <!-- RESET PASSWORD SCREEN -->
        <activity
            android:name="com.mh.systems.halesworth.activites.ResetPasswordActivity"
            android:screenOrientation="portrait" />

        <!-- SEND FEEDBACK SCREEN -->
        <activity
            android:name="com.mh.systems.halesworth.activites.SendFeedbackActivity"
            android:screenOrientation="portrait" />

        <!-- SEND FEEDBACK SCREEN -->
        <activity
            android:name="com.mh.systems.halesworth.activites.FinanceDetailWebActivity"
            android:screenOrientation="portrait" />

        <!-- MY DETAILS TOGGLE SCREEN -->

        <activity
            android:name="com.mh.systems.halesworth.activites.EditToggleDetailActivity"
            android:screenOrientation="portrait" />

        <!-- MY DETAILS EDIT SCREEN -->

        <activity
            android:name="com.mh.systems.halesworth.activites.MyDetailsEditActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>