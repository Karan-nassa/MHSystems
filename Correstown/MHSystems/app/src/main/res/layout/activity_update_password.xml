<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGreyf1f1f0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- UPDATE LOGIN CREDENTIALS TITLE -->

        <com.mh.systems.correstown.customfonts.RobotoMediumTextView
            android:id="@+id/tvUpdatePwdTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:alpha="0.4"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="@string/text_title_update_pwd"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:orientation="vertical">

            <!-- USERNAME -->

            <EditText
                android:id="@+id/etUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_shape_white"
                android:gravity="center"
                android:hint="@string/edit_hint_username"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/colorBlack000000"
                android:textColorHint="@color/colorD6D0C9"
                android:textSize="17sp"/>

        <!-- NEW PASSWORD -->

        <EditText
            android:id="@+id/etNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext_shape_white"
            android:gravity="center"
            android:hint="@string/edit_title_new_pwd"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/colorBlack000000"
            android:textColorHint="@color/colorD6D0C9"
            android:textSize="17sp" />


        <!-- CONFIRM PASSWORD -->

        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext_shape_white"
            android:gravity="center"
            android:hint="@string/edit_title_confirm_password"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/colorBlack000000"
            android:textColorHint="@color/colorD6D0C9"
            android:textSize="17sp" />


        <!-- RESET PASSWORD BUTTON WITH TICK ICON -->


        <!-- UPDATE PASSWORD -->

        <Button
            android:id="@+id/btUpdatePassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:background="@drawable/background_button_e8dcc9"
            android:elevation="0dp"
            android:enabled="false"
            android:text="@string/buton_update"
            android:textAllCaps="false"
            android:textColor="@color/colorWhiteffffff"
            android:textSize="17sp" />


    </LinearLayout>

</LinearLayout>

    </RelativeLayout>
