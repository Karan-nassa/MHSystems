<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mh.systems.hartsbourne">

    <!-- PERMISSION TO USE INTERNET -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- FOR NETWORK STATE -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- PERMISSION FOR PHONE CALL_PHONE -->
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <!-- [START gcm_permission] -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <permission
        android:name="com.mh.systems.hartsbourne.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />
    <uses-permission android:name="com.mh.systems.hartsbourne.permission.C2D_MESSAGE" />
    <!-- [END gcm_permission] -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppThemeMaterial">

        <!-- SPLASH ACTIVITY -->
        <activity
            android:name="com.mh.systems.hartsbourne.activites.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- LOGIN ACTIVITY -->
        <activity
            android:name="com.mh.systems.hartsbourne.activites.LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />

        <!-- DASHBOARD ACTIVITY -->
        <activity
            android:name="com.mh.systems.hartsbourne.activites.DashboardActivity"
            android:screenOrientation="portrait" />

        <!-- COURSE DIARY ACTIVITY -->
        <activity
            android:name="com.mh.systems.hartsbourne.activites.CourseDiaryActivity"
            android:screenOrientation="portrait" />

        <!-- COURSE DIARY WEB-VIEW -->

        <activity
            android:name="com.mh.systems.hartsbourne.activites.CourseDiaryWebviewActivity"
            android:screenOrientation="portrait" />

        <!-- COURSE DIARY DETAIL ACTIVITY -->
        <activity
            android:name="com.mh.systems.hartsbourne.activites.CourseDiaryDetailActivity"
            android:screenOrientation="portrait" />

        <!-- COURSE DIARY ALERT DIALOG -->
        <activity
            android:name="com.mh.systems.hartsbourne.activites.CustomAlertDialogActivity"
            android:screenOrientation="portrait"
            android:theme="@style/App_Theme" />

        <!-- COMPETITIONS DIARY ACTIVITY -->
        <activity
            android:name="com.mh.systems.hartsbourne.activites.CompetitionsActivity"
            android:screenOrientation="portrait" />

        <!-- COMPLETED COMPETITIONS ACTIVITY -->
        <activity
            android:name="com.mh.systems.hartsbourne.activites.CompletedDetailActivity"
            android:screenOrientation="portrait" />

        <!-- MY ACCOUNT ACTIVITY -->
        <activity
            android:name="com.mh.systems.hartsbourne.activites.YourAccountActivity"
            android:screenOrientation="portrait" />

        <!-- DETAIL INVOICE ACTIVITY -->

        <!-- MEMBERS ACTIVITY -->
        <activity
            android:name="com.mh.systems.hartsbourne.activites.MembersActivity"
            android:screenOrientation="portrait" />

        <!-- MEMBERS DETAIL ACTIVITY -->
        <activity
            android:name="com.mh.systems.hartsbourne.activites.MemberDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeMaterial" />

        <!-- SHOW CERTIFICATE ACTIVITY -->
        <activity
            android:name="com.mh.systems.hartsbourne.activites.ShowCertificateWebview"
            android:screenOrientation="portrait" />

        <!-- CLUB NEWS ACTIVITY -->
        <activity
            android:name="com.mh.systems.hartsbourne.activites.ClubNewsActivity"
            android:screenOrientation="portrait" />

        <!-- CLUB NEWS DETAIL ACTIVITY -->
        <activity
            android:name="com.mh.systems.hartsbourne.activites.ClubNewsDetailActivity"
            android:screenOrientation="portrait" />

        <!-- SETTING SCREEN -->
        <activity
            android:name="com.mh.systems.hartsbourne.activites.SettingsActivity"
            android:screenOrientation="portrait" />

        <!-- RESET PASSWORD SCREEN -->
        <activity
            android:name="com.mh.systems.hartsbourne.activites.ResetPasswordActivity"
            android:screenOrientation="portrait" />

        <!-- SEND FEEDBACK SCREEN -->
        <activity
            android:name="com.mh.systems.hartsbourne.activites.SendFeedbackActivity"
            android:screenOrientation="portrait" />

        <!-- SEND FEEDBACK SCREEN -->
        <activity
            android:name="com.mh.systems.hartsbourne.activites.FinanceDetailWebActivity"
            android:screenOrientation="portrait" />

        <!-- MY DETAILS TOGGLE SCREEN -->

        <activity
            android:name="com.mh.systems.hartsbourne.activites.EditToggleDetailActivity"
            android:screenOrientation="portrait" />

        <!-- MY DETAILS EDIT SCREEN -->

        <activity
            android:name="com.mh.systems.hartsbourne.activites.EditDetailsActivity"
            android:screenOrientation="portrait" />

        <!-- HANDICAP HISTORY -->

        <activity
            android:name="com.mh.systems.hartsbourne.activites.HCapHistoryActivity"
            android:screenOrientation="portrait" />

        <!-- COMPETITION DETAIL ACTIVITY -->

        <activity
            android:name="com.mh.systems.hartsbourne.activites.CompetitionDetailActivity"
            android:screenOrientation="portrait" />

        <!-- COMPETITIONS ENTRY -->

        <activity
            android:name="com.mh.systems.hartsbourne.activites.CompetitionEntryActivity"
            android:screenOrientation="portrait" />

        <!-- COMPETITION ENTRY -->

        <activity
            android:name="com.mh.systems.hartsbourne.activites.EligiblePlayersActivity"
            android:screenOrientation="portrait" />

        <!-- UPDATE Password Activity -->

        <activity
            android:name="com.mh.systems.hartsbourne.activites.UpdatePasswordActivity"
            android:screenOrientation="portrait" />

        <!-- See the Weather-->

        <activity
            android:name=".activites.WeatherDetailActivity"
            android:screenOrientation="portrait" />

        <!-- FORGOT Password Activity -->

        <activity
            android:name="com.mh.systems.hartsbourne.activites.ForgotPasswordActivity"
            android:screenOrientation="portrait" />

        <!-- TOP UP PAYMENTS -->

        <activity
            android:name=".activites.MakePaymentWebActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activites.TopUpActivity"
            android:screenOrientation="portrait" />

        <!-- FRIENDS INFO -->

        <activity
            android:name=".activites.FriendsInfoActivity"
            android:screenOrientation="portrait" />

        <!-- See the Weather-->

        <!-- [START gcm_receiver] -->
        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="gcm.play.android.samples.com.gcmquickstart" />
            </intent-filter>
        </receiver>
        <!-- [END gcm_receiver] -->

        <!-- [START gcm_listener] -->
        <!-- [END gcm_listener] -->
        <!-- [START instanceId_listener] -->
        <service
            android:name="com.mh.systems.hartsbourne.push.MyInstanceIDListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID" />
            </intent-filter>
        </service>
        <!-- [END instanceId_listener] -->
        <service
            android:name="com.mh.systems.hartsbourne.push.RegistrationIntentService"
            android:exported="false" />

    </application>

</manifest>