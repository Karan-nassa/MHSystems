<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <corners
        android:topLeftRadius="20dp"
        android:topRightRadius="20dp"
        android:bottomLeftRadius="2dp"
        android:bottomRightRadius="2dp" />

    <gradient
        android:angle="45"
        android:centerColor="@color/colorWhiteffffff"
        android:centerX="35%"
        android:endColor="@color/colorWhiteffffff"
        android:startColor="@color/colorWhiteffffff"
        android:type="linear" />

    <!-- STROKE/BORDER LINE -->

    <stroke
        android:width="4dp"
        android:color="@color/colorWhiteffffff" />

</shape>