<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_marginBottom="7dp"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:id="@+id/llTeeBookingRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llBookingDescRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="100">

                <!-- TIME OF EVENT -->

                <TextView
                    android:id="@+id/tvMottDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="28"
                    android:text="30/10/2017"
                    android:textColor="@color/colorBlack000000"
                    android:textSize="14sp" />

                <!-- TITLE OF EVENT -->

                <TextView
                    android:id="@+id/tvMottTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="52"
                    android:text="Member Tee Reservation"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <!-- PRICE OF EVENT ENTRY -->

                <TextView
                    android:id="@+id/tvMottText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:text="10:30 AM"
                    android:gravity="right"
                    android:textColor="@color/colorBlack000000"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- BUGGY ROW -->

            <LinearLayout
                android:id="@+id/llBuggyRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="100">

                <!-- TIME OF EVENT -->

                <TextView
                    android:id="@+id/tvBuggySpace"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="28"
                    android:text="30/10/2017"
                    android:visibility="invisible"
                    android:textColor="@color/colorBlack000000"
                    android:textSize="14sp" />

                <!-- TITLE OF EVENT -->

                <TextView
                    android:id="@+id/tvBuggyTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="52"
                    android:text="Buggy"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <!-- PRICE OF EVENT ENTRY -->

                <TextView
                    android:id="@+id/tvBuggyPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:text="Â£10.00"
                    android:gravity="right"
                    android:textColor="@color/colorBlack000000"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>