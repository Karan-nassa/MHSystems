<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- TOOL BAR WITH BACK ARROW AND SAVE -->

        <android.support.v7.widget.Toolbar
            android:id="@+id/tbBookingDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color4B4B49"
            android:minHeight="?android:attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="Booking details" />

        <!-- TOP HEADING VIEW -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D6D0C9"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp">

            <!-- SUMMER LABEL -->

            <com.mh.systems.demoapp.customfonts.RobotoMediumTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUMMARY"
                android:textColor="#C59A5C"
                android:textSize="12sp" />

            <!-- PLAYERS AND PRICES ROW -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="90">

                <com.mh.systems.demoapp.customfonts.RobotoTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="30"
                    android:text="Players"
                    android:textColor="#4B4B49"
                    android:textSize="16sp" />

                <com.mh.systems.demoapp.customfonts.RobotoTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="30"
                    android:alpha="0.5"
                    android:text="2x £5.00"
                    android:textColor="#4B4B49"
                    android:textSize="16sp" />

                <com.mh.systems.demoapp.customfonts.RobotoTextFontBold
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="30"
                    android:gravity="right|end"
                    android:text="£10.00"
                    android:textColor="#4B4B49"
                    android:textSize="16sp" />

            </LinearLayout>

            <!-- TEE TIME ROW -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="90">

                <com.mh.systems.demoapp.customfonts.RobotoTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="45"
                    android:text="Tee Time"
                    android:textColor="#4B4B49"
                    android:textSize="16sp" />

                <com.mh.systems.demoapp.customfonts.RobotoTextFontBold
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="45"
                    android:gravity="right|end"
                    android:text="10:00 AM"
                    android:textColor="#4B4B49"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>

        <!-- BOTTOM CONTENT WITH PLAYER LIST AND GRID TIME -->

        <ScrollView
            android:id="@+id/svPlayerContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F9F8F7"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <!-- SELECT PLAYER LABEL -->

                <com.mh.systems.demoapp.customfonts.RobotoMediumTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SELECT PLAYERS"
                    android:textColor="#C59A5C"
                    android:textSize="12sp" />

                <!-- ADD STATIC VIEW AT RUN-TIME -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <!-- PLAYER COUNT -->

                    <com.mh.systems.demoapp.customfonts.RobotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.5"
                        android:text="Player 1"
                        android:textColor="#000000" />

                    <!-- PLAYER INFO. -->

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:orientation="horizontal">


                        <com.mh.systems.demoapp.customfonts.RobotoTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Mr Greg Hadala"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="7dp"
                        android:background="#E8E2DD" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <!-- PLAYER COUNT -->

                    <com.mh.systems.demoapp.customfonts.RobotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.5"
                        android:text="Player 2"
                        android:textColor="#000000" />

                    <!-- PLAYER INFO. -->

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:orientation="horizontal">


                        <com.mh.systems.demoapp.customfonts.RobotoTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Mr Calvin Jennings"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:src="@mipmap/ic_round_cross" />

                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="7dp"
                        android:background="#E8E2DD" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <!-- PLAYER COUNT -->

                    <com.mh.systems.demoapp.customfonts.RobotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.5"
                        android:text="Player 3"
                        android:textColor="#000000" />

                    <!-- PLAYER INFO. -->

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:orientation="horizontal">


                        <com.mh.systems.demoapp.customfonts.RobotoTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Add (optionaly)"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="7dp"
                        android:background="#E8E2DD" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <!-- PLAYER COUNT -->

                    <com.mh.systems.demoapp.customfonts.RobotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.5"
                        android:text="Player 4"
                        android:textColor="#000000" />

                    <!-- PLAYER INFO. -->

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:orientation="horizontal">


                        <com.mh.systems.demoapp.customfonts.RobotoTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Add (optionaly)"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="7dp"
                        android:background="#E8E2DD" />

                </LinearLayout>

                <!-- END OF STATIC ROW DATA -->

                <!-- SUMMER LABEL -->

                <com.mh.systems.demoapp.customfonts.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:text="SELECT TEE TIME"
                    android:textColor="#C59A5C"
                    android:textSize="12sp" />

                <!-- TIME SLOTS GRID VIEW -->

                <GridView
                    android:id="@+id/gvTimeSlots"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:cacheColorHint="@android:color/transparent"
                    android:gravity="center"
                    android:numColumns="3" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>
