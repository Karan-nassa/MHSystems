<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Non focused states -->
    <item android:state_focused="false" android:state_selected="false" android:state_pressed="false" android:drawable="@color/colorTheme" />
    <item android:state_focused="false" android:state_selected="true"  android:state_pressed="false" android:drawable="@color/colorTheme" />

    <!-- Focused states -->
    <item android:state_focused="true" android:state_selected="false" android:state_pressed="false" android:drawable="@color/colorBlack000000" />
    <item android:state_focused="true" android:state_selected="true"  android:state_pressed="false" android:drawable="@color/colorBlack000000" />

    <!-- Pressed -->
    <!--    Non focused states -->
    <item android:state_focused="false" android:state_selected="false" android:state_pressed="true" android:drawable="@color/colorBlack000000" />
    <item android:state_focused="false" android:state_selected="true"  android:state_pressed="true" android:drawable="@color/colorTheme" />

    <!--    Focused states -->
    <item android:state_focused="true" android:state_selected="false" android:state_pressed="true" android:drawable="@color/colorTheme" />
    <item android:state_focused="true" android:state_selected="true"  android:state_pressed="true" android:drawable="@color/colorTheme" />
</selector>