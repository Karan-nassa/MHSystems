<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cdlCourse"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- STATUS BAR -->

            <!-- <android.support.v7.widget.Toolbar
                 android:id="@+id/toolBar"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:background="@color/color4B4B49"
                 android:fitsSystemWindows="true"
                 android:minHeight="?android:attr/actionBarSize"
                 android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color4B4B49"
                android:minHeight="?android:attr/actionBarSize"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llHomeIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <!-- HOME MENU ICON -->

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_menu" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llMonthTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <!-- COURSE TYPE [OLD/NEW COURSE] -->

                    <com.ucreate.mhsystems.customfonts.RobotoMediumTextView
                        android:id="@+id/tvCourseType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="Course Name"
                        android:textColor="@color/colorWhiteffffff"
                        android:textSize="20sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/ic_arrow_down" />

                </LinearLayout>

            </LinearLayout>

            <!--   </android.support.v7.widget.Toolbar>-->

            <!-- QUICK NAVIGATION ICONS FOR CHANGE CONTENT LIKE PREVIOUS, NEXT, CALENDAR AND TODAY -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorD6D0C9"
                android:orientation="horizontal"
                android:weightSum="100">

                <!-- PREVIOUS MONTH ICON -->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="15"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivPrevMonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onClick"
                        android:src="@mipmap/ic_date_prevmonth" />

                    <!-- DIVIDER LINE -->

                    <View style="@style/CourseNavDividers" />

                </LinearLayout>

                <!-- NAME [TITLE] OF MONTH -->

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="35"
                    android:orientation="horizontal">

                    <com.ucreate.mhsystems.customfonts.SFUI_TextFontMedium
                        android:id="@+id/tvNameOfMonth"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:onClick="onClick"
                        android:textColor="@color/color030303"
                        android:textSize="17sp" />

                    <!-- DIVIDER LINE -->

                    <View
                       style="@style/CourseNavDividers" />

                </FrameLayout>

                <!-- NEXT MONTH ICON -->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="15"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivNextMonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:onClick="onClick"
                        android:src="@mipmap/ic_date_nextmonth" />

                    <!-- DIVIDER LINE -->

                    <View
                        style="@style/CourseNavDividers" />

                </LinearLayout>

                <!-- NAME [TITLE] OF MONTH -->

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:orientation="horizontal">

                    <com.ucreate.mhsystems.customfonts.SFUI_TextFontMedium
                        android:id="@+id/tvToday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:onClick="onClick"
                        android:text="Today"
                        android:textColor="@color/color030303"
                        android:textSize="17sp" />

                    <!-- DIVIDER LINE -->

                    <View
                        style="@style/CourseNavDividers" />

                </FrameLayout>

                <!-- NEXT MONTH ICON -->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="15"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivCalendar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:onClick="onClick"
                        android:src="@mipmap/ic_date_calendar" />

                </LinearLayout>

            </LinearLayout>

            <include
                android:id="@+id/inc_noInternet"
                layout="@layout/include_no_internet"
                android:visibility="gone"/>


            <!-- USE TO DISPLAY COURSE LIST -->

            <ListView
                android:id="@+id/lvCourseDiary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:cacheColorHint="@android:color/white"
                android:divider="@color/colorC0995B"
                android:dividerHeight="0.3dp" />

        </LinearLayout>

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>