<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.WelcomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- STATUS BAR -->

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAFD9A1"
            android:fitsSystemWindows="true"
            android:minHeight="?android:attr/actionBarSize">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:orientation="vertical">

                    <!-- BACK ARROW  -->
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_home_menu" />

                </LinearLayout>

                <!-- TITLE OF SCREEN WITH SUB-TITLE -->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:orientation="vertical">

                    <!-- COURSE DATE WEEKEND/MONTHLY -->

                    <TextView
                        android:id="@+id/tvCourseSchedule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity=""
                        android:layout_marginTop="2dp"
                        android:text="March 2016"
                        android:textColor="@color/colorBlack000000"
                        android:textSize="20sp" />

                </LinearLayout>

                <!-- FOR TEXT TITLE TODAY-->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20">

                    <!-- TITLE TODAY -->

                    <TextView
                        android:id="@+id/tvTitleToday"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:gravity="center|right"
                        android:paddingRight="10dp"
                        android:textColor="@color/colorc4a167"
                        android:textSize="14sp" />

                </LinearLayout>


            </LinearLayout>


        </android.support.v7.widget.Toolbar>


        <!-- TAB LAYOUT TO ADD TABS -->

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAFD9A1"
            android:elevation="6dp"
            app:tabTextColor="@color/colorBlack000000"
            app:tabSelectedTextColor="@color/colorBlack000000"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />


        <!-- VIEW PAGER TO LOAD SELECTED TAB PAGES -->

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/tab_layout" />

    </LinearLayout>

</RelativeLayout>