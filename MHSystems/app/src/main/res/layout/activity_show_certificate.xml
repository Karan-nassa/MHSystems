<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- SUPPORT TOOL BAR FOR TITLE AND BACK ARROW -->

        <android.support.v7.widget.Toolbar
            android:id="@+id/tbCertificate"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorB2E6D9"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/App_Theme"
            app:title="Handicap Certificate" />

        <!-- WEB VIEW TO LOAD HTML CONTENT / URL-->

        <WebView
            android:id="@+id/wvWebView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhiteffffff" />

    </LinearLayout>


    <!-- PROGRESS BAR -->

    <ProgressBar
        android:id="@+id/progressWebView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

</RelativeLayout>
