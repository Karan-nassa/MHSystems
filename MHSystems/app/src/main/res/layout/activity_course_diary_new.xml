<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cdlCourse"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- STATUS BAR -->

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color4B4B49"
                android:fitsSystemWindows="true"
                android:minHeight="?android:attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/llHomeIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- HOME MENU ICON -->

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_menu" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llMonthTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <!-- COURSE DATE WEEKEND/MONTHLY -->

                        <com.ucreate.mhsystems.customfonts.RobotoMediumTextView
                            android:id="@+id/tvMonthsName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="Course Name"
                            android:textColor="@color/colorWhiteffffff"
                            android:textSize="20sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:src="@mipmap/ic_arrow_down" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.Toolbar>

            <!-- QUICK NAVIGATION ICONS FOR CHANGE CONTENT LIKE PREVIOUS, NEXT, CALENDAR AND TODAY -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorD6D0C9"
                android:weightSum="100"
                android:orientation="horizontal">

                <!-- PREVIOUS MONTH ICON -->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="15"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_date_prevmonth" />

                    <!-- DIVIDER LINE -->

                    <View
                        android:layout_width="2dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/colorBDB6AE" />

                </LinearLayout>

                <!-- NAME [TITLE] OF MONTH -->

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="35"
                    android:orientation="horizontal">

                    <com.ucreate.mhsystems.customfonts.SFUI_TextFontMedium
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="September"
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/color030303"
                        android:textSize="17sp" />

                    <!-- DIVIDER LINE -->

                    <View
                        android:layout_width="2dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_gravity="end|center"
                        android:background="@color/colorBDB6AE" />

                </FrameLayout>

                <!-- NEXT MONTH ICON -->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="15"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_date_nextmonth" />

                    <!-- DIVIDER LINE -->

                    <View
                        android:layout_width="2dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/colorBDB6AE" />

                </LinearLayout>

                <!-- NAME [TITLE] OF MONTH -->

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:orientation="horizontal">

                    <com.ucreate.mhsystems.customfonts.SFUI_TextFontMedium
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Today"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/color030303"
                        android:textSize="17sp" />

                    <!-- DIVIDER LINE -->

                    <View
                        android:layout_width="2dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_gravity="end|center"
                        android:background="@color/colorBDB6AE" />

                </FrameLayout>

                <!-- NEXT MONTH ICON -->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="15"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_date_calendar" />

                </LinearLayout>

            </LinearLayout>


            <!-- USE TO DISPLAY COURSE LIST -->

            <ListView
                android:id="@+id/lvCourseDiary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:cacheColorHint="@android:color/white"
                android:divider="@android:color/white"
                android:dividerHeight="0dp" />

        </LinearLayout>

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>