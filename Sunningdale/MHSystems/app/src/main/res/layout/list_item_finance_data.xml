<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp">

    <LinearLayout
        android:id="@+id/llFinanceView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <!--  TRANSACTION TIME -->

            <TextView
                android:id="@+id/tvTransTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="22"
                android:paddingLeft="2dp"
                android:text="11:05 PM"
                android:textSize="14sp" />

            <!-- TRANSACTION TITLE -->

            <TextView
                android:id="@+id/tvTransTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="34"
                android:paddingLeft="7dp"
                android:text="Purchase"
                android:singleLine="true"
                android:textSize="14sp" />

            <!-- AMOUNT OF TRANSACTION -->

            <TextView
                android:id="@+id/tvAmountStr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="22"
                android:gravity="right"
                android:paddingLeft="4dp"
                android:text="£-279.00"
                android:textSize="14sp" />

            <!-- BALANCE-->

            <TextView
                android:id="@+id/tvBalanceStr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="22"
                android:gravity="right"
                android:paddingLeft="4dp"
                android:paddingRight="2dp"
                android:text="£67.82"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDiscountGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <!--  TRANSACTION TIME -->

            <TextView
                android:id="@+id/tvDiscountTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="22"
                android:paddingLeft="2dp"
                android:text="11:05 PM"
                android:textSize="14sp" />

            <!-- TRANSACTION TITLE -->

            <TextView
                android:id="@+id/tvDiscountTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="34"
                android:paddingLeft="7dp"
                android:text="Discount"
                android:singleLine="true"
                android:textSize="14sp" />

            <!-- AMOUNT OF TRANSACTION -->

            <TextView
                android:id="@+id/tvDiscountAmtStr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="22"
                android:gravity="right"
                android:paddingLeft="4dp"
                android:text="£27.90"
                android:textSize="14sp" />

            <!-- BALANCE-->

            <TextView
                android:id="@+id/tvDiscountBalStr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="22"
                android:gravity="right"
                android:paddingLeft="4dp"
                android:paddingRight="2dp"
                android:text="£95.72"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- DIVIDER -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:alpha="0.2"
            android:background="@color/color030303"/>

    </LinearLayout>

</RelativeLayout>